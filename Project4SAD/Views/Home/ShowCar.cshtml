@model Project4SAD.ViewModel.ViewModelShowCar
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "ShowCar";
    Layout = "_Layout";
}

@if (Model.pizzas.Any())
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Item</th>
                            <th>Description</th>
                            <th>Priec</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var i in Model.pizzas)
                        {
                            var res = @i.ImgPath.Split("\\");
                        <tr>
                            <td><img src="~/image/@res[9]" width="50" height="50 "/></td>
                            <td>@i.NameItem</td>
                            <td>@i.Description</td>
                            <td>@i.price</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-7">
                <form method="post" asp-action="AddListItem">
                    <div class="form-group">
                        <input type="text" asp-for="customer.Name" class="form-control"  placeholder="Custmore Name"/>
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="customer.Address"  class="form-control"  placeholder="Address"/>
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="customer.Phone"  class="form-control"  placeholder="Phone"/>
                    </div>
                    <div class="form-group">
                        <input type="submit"  class="btn btn-info"  value="Pay"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <h1>lmml</h1>
}


